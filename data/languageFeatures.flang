module languageFeatures;

import native;
import apple;

export main;

fn main() {
    var noodle = 2;
    greet(noodle);
    noodle = 3;
}

fn looper() {
    apple:sauce();
    native:println("Hello, Before!");
    while true {
        native:println("Hello, World!");
    }
    native:println("Hello, After!");
}

fn greet(p) {
    if p {
        native:println("Hello, True!");
        return 1;
    } else {
        native:println("Hello, False!");
        return 2;
    }
}
